        <RelativeLayout
android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_news_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                     android:layout_marginRight="100dp"
                android:padding="5dp"

                android:text="朴槿惠亲信干政dfsdfbdsddvfxdzsZxcvzcvccxzvcxz”"

                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_news_detail_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/tv_news_detail_title"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="人民网" />

            <TextView
                android:id="@+id/tv_news_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_news_detail_author_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_news_detail_author_name"
                android:maxLines="1"
                android:text="2017-02-09 10:45" />
            <ImageView
                android:id="@+id/draweeView"
                android:scaleType="fitCenter"
                android:layout_alignRight="@id/tv_news_detail_title"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"

                android:layout_height="100dp"

                />

        </RelativeLayout>





</LinearLayout>

