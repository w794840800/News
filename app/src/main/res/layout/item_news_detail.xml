        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">





            <TextView
                android:id="@+id/tv_news_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:padding="5dp"
                     android:lineSpacingExtra="5dp"
                android:text="朴槿惠亲信干政dfsdfbdsddvfxdzsZxcvzcvccxzvcxz”"

                android:textSize="18sp" />

            <LinearLayout
android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tv_news_detail_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:text="人民网" />

                <TextView
                    android:id="@+id/tv_news_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"
                    android:text="2017-02-09 10:45" />


            </LinearLayout>



            <ImageView
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:id="@+id/draweeView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"

                android:layout_alignRight="@id/tv_news_detail_title"

                />


        </RelativeLayout>


    </LinearLayout>

